#!/bin/bash

build() {
    add_binary "/usr/bin/dols" "/usr/bin/dols"
    add_binary "/usr/bin/ip" "/sbin/ip"
    add_binary "/usr/lib/initcpio/ipconfig" "/sbin/ipconfig"

    add_systemd_unit 'dols.service'
    add_systemd_unit 'dols-net.service'

    map add_file \
        '/etc/ssh/ssh_host_rsa_key' \
        '/etc/ssh/ssh_host_ecdsa_key' \
        '/etc/passwd' \
        '/etc/shadow'

    add_checked_modules '/drivers/net/'
}

help() {
    cat << HELPEOF
Hello, World!
HELPEOF
}
